{
  "name": "rebet-automation-framework",
  "version": "1.0.0",
  "description": "E2E automation framework for Rebet.app website and mobile applications",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:mobile": "playwright test --project=mobile",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen https://rebet.app/",
    "test:parallel": "playwright test --workers=4",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "type-check": "tsc --noEmit",
    "install:browsers": "playwright install --with-deps",
    "install:deps": "playwright install-deps",
    "validate:ci": "node scripts/validate-ci.js",
    "ci:setup": "npm ci && npm run install:browsers",
    "ci:test": "npm run validate:ci && npm test"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "allure-playwright": "^2.9.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.18.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "automation",
    "testing",
    "playwright",
    "e2e",
    "rebet",
    "sports-betting",
    "casino"
  ],
  "author": "",
  "license": "MIT"
}
